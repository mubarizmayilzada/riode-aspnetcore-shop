        }

            .is-invalid + span.error {
                color: #dc3545;
                font-size: 1rem;
                margin-left: 4px;
            }

        .is-valid {
            border: 1px solid teal;
        }
    </style>
}
@section addjs{

    <script>


        $(document).ready(function () {

            $('[data-val="true"]').each(function (index, item) {
                $(item).removeAttr('data-val');

                let value = $(item).data('val-required');

                if (value != undefined && value.length > 0) {
                    $(item).removeAttr('data-val-required');
                    $(item).attr('data-rule-required', true);
                    $(item).attr('data-msg-required', value);

                }

                value = $(item).data('val-email');

                if (value != undefined && value.length > 0) {
                    $(item).removeAttr('data-val-email');
                    $(item).attr('data-rule-email', true);
                    $(item).attr('data-msg-email', value);

                }
            });

            $('#contact')
                .submit(function (e) {
                    e.preventDefault();

                    const isValid = $(e.currentTarget).valid();

                    if (isValid != true)
                        return;

                    const formData = new FormData(e.currentTarget);

                    $.ajax({
                        url: '',
                        type: 'POST',
                        data: formData,
                        contentType: false,
                        processData: false,
                        success: function (response) {
                            console.log(response)

                            if (response.error == false) {
                                e.currentTarget.reset();
                                
                                toastr.success(response.message,"Uğurlu")


                                $(e.currentTarget).find('.is-valid').removeClass('is-valid');
                            }
                            else {
                                toastr.error(response.message, "Xəta")
                            }
                        },
                        error: function (response) {
                            toastr.error("teyin edilmeyen xeta bash verib yeniden yoxlayin.", "Xəta")
                        }
                    });

                })
                .validate({
                    errorElement: 'span',
                    highlight: function (element, errorClass, validClass) {
                        $(element).addClass('is-invalid').removeClass('is-valid')
                    },
                    unhighlight: function (element, errorClass, validClass) {
                        $(element).addClass('is-valid').removeClass('is-invalid')
                    }
                });


        });

    </script>
}